@startuml
left to right direction
skinparam packageStyle rectangle

actor Admin
actor CollegeAdmin
actor DepartmentAdmin
actor Supervisor
actor Student

rectangle "Progress Pattern Management System" {

  Admin --> (Create Progress Pattern)
  Admin --> (Update Progress Pattern)
  Admin --> (Delete Progress Pattern)

  Admin --> (Define Progress Stage)
  Admin --> (Define Sub-Stage)
  Admin --> (Set Stage Order)
  Admin --> (Set Stage Marks)

  (Create Progress Pattern) --> (Assign Stages to Pattern)
  (Assign Stages to Pattern) --> (Assign Sub-Stages to Pattern)

  CollegeAdmin --> (Assign Pattern to College)
  CollegeAdmin --> (Set Default College Pattern)

  DepartmentAdmin --> (Assign Pattern to Department)
  DepartmentAdmin --> (Set Default Department Pattern)

  Supervisor --> (View Assigned Pattern)
  Supervisor --> (Track Group Progress)

  Student --> (View Project Progress)
  Student --> (View Stages & Sub-Stages)

  (Assign Pattern to Department) --> (Group Selects Pattern)
  (Group Selects Pattern) --> (Track Group Progress)
}

@enduml
